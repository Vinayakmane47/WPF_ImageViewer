<UserControl x:Class="project2.view.usercontrols.MenuBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:project2.view.usercontrols"
             mc:Ignorable="d" 
             d:DesignHeight="70" d:DesignWidth="800">
    <Grid  >
        <Grid.RowDefinitions >
            <RowDefinition Height="30" />
            <RowDefinition Height="40" />
            
        </Grid.RowDefinitions>

        <Menu >
            <MenuItem Header="File" FontSize="20">
                <MenuItem Header="Open" Click="MenuItem_Click" />
            </MenuItem>
            <MenuItem Header="Exit" FontSize="20" Click="MenuItem_Click_1"/>
        </Menu>
        <Grid Grid.Row="1" >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="auto"/>

            </Grid.ColumnDefinitions>
            <Button  Width="50" Margin="5" Content="Open" Click="MenuItem_Click" />
            <TextBox Grid.Column="1"  Width="150" Margin="5"/>
            
        </Grid>
    </Grid>
</UserControl>
